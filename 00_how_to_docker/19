#docker run -d -t --name Abathur -v ~/python:/root -p 3000:3000 python:2-slim &&
docker exec Abathur pip install Flask &&
echo "from flask import Flask\n
app = Flask(__name__)\n
\n
@app.route('/')\n
def hello_world():\n\t
    return 'Hello, World!'" > ~/python/hello.py &&
docker exec Abathur bash -c 'export FLASK_APP=hello.py ; flask run --host=0.0.0.0 --port=3000'
